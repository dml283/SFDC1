<apex:page showHeader="false" sidebar="false" standardStylesheets="false">
<div ng-show="isWorking()">
    <p>Working</p>
</div>

<div ng-show="!isWorking()">
    <!-- This div is only displayed in desktops (see below for mobile phones)-->
    <div class="hidden-phone">
        <div style="float: left">
            <div style="margin-bottom: 10px;">
                <input type="text" ng-model="searchTerm" class="search-query" placeholder="Search1" />

                <p class="btn btn-primary" ng-click="doSearchAccount(searchString)">Go</p>
            </div>
        </div>

        <div style="float: right">
            <a href="#/new" class="btn btn-primary">New</a>
        </div>


        <table width="80%" class="table">
            <thead>
            <tr>
                <th class='hidden-phone'>Id</th>
                <th>Name</th>
                <th>NameLocal</th>
                <th class='hidden-phone'>BillingAddress</th>
                <th>Phone</th>
                <th class='hidden-phone'>RecordType</th>
            </tr>
            </thead>
            <tbody>

            <tr ng-repeat="account in accounts">
                <td class='hidden-phone'>{{account.Id}}</td>
                <td><a href="#/view/{{account.Id}}">{{account.Name}}</a></td>
                <td>{{Account.NameLocal}}</td>
                <td class='hidden-phone'>{{account.BillingAddress}}</td>
                <td>{{account.Phone}}</td>
                <td class='hidden-phone'>{{account.RecordType}}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <!-- This div is only displayed in mobile phones (see above for desktops) -->
    <div class="visible-phone">
        <form class="form-inline">
            <input type="text" ng-model="searchTerm" class="input-medium search-query" placeholder="Search" />
            <button ng-click="doSearch(searchString)" class="btn btn-primary">Go</button>
            <button ng-click="doCreate()" class="btn btn-default">&nbsp;+&nbsp;</button>
        </form>

        <table class="table">
            <tr ng-click="doView(contact.Id)" ng-repeat="contact in contacts">
                <td><b class="fullname">{{contact.FirstName}} {{contact.LastName}}</b>
                    <br />
                    <small class="metadata">{{contact.Account.Name}}</small>
                </td>
                <td><i class="icon-chevron-right"></i></td>
            </tr>
        </table>
    </div>

</div>
</apex:page>