     function sample()  
     {
      var successflagApp = document.getElementById('{!$Component.myPage.myForm.successFlag}').value;
     // alert(successflagApp);
      window.opener.CallAlert(document.getElementById('{!$Component.myPage.myForm.successFlag}').value);
