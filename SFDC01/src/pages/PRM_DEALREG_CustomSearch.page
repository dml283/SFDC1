        } */
        window.close();
        //return false;
     }
     
     function populateaddress()
     {
      //alert('start populate address');
      var country =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputCountry}').value;
      var street  =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputStreet}').value;
      var city  =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputCity}').value;
      var state  =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputState}').value;
      var zipcode  =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputZipCode}').value;
      var accountName  =document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputAccountName}').value;
      var passaddress = false;
      if(country !='' && street !='' && city !='' && accountName !='' ){
         //alert('condition populate address');
        passaddress = true;
      }
       if(passaddress){                             
       window.opener.CallAddress(document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputStreet}').value,
                                document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputCity}').value,
                                document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputState}').value,
                                document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputZipCode}').value,
                                document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputCountry}').value,
                                document.getElementById('{!$Component.myPage.myForm.inputblock.inputsection.inputAccountName}').value);
        //alert('populate address');
         window.close();
      }                           
     }
     
    function sortColumn1(column_name) {
       var fieldobj = document.getElementById('{!$Component.myPage.myForm.sortField1}');
       var orderobj = document.getElementById('{!$Component.myPage.myForm.sortAscending1}');
       //alert(fieldobj.value);
       //alert(orderobj.value);
       var new_sort_order = 'true';
       if(column_name == fieldobj.value) {
         // if previously same column sorted, reverse the sort order
         new_sort_order = (orderobj.value=='false'?'true':'false');
        }
       fieldobj.value = column_name;
       orderobj.value = new_sort_order; 
       //alert('end sorting');
     } 
    </script>

</apex:page>